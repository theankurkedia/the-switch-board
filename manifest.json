{
    "manifest_version": 2,
    "name": "The Switch Board",
    "description": "Switch the color mode of any page",
    "version": "4",
    "author": "Ankur Kedia",
    "browser_action": {
        "default_title": "The Switch Board"
    },
    "commands": {
      "switch": {
          "suggested_key": {
              "default": "Alt+Shift+S"
          },
          "description": "Switch mode"
      }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}