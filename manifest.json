{
    "manifest_version": 2,
    "name": "The Switch Board",
    "description": "Change the color mode of any page",
    "version": "1",
    "author": "Ankur Kedia",
    "browser_action": {
        "default_title": "The Switch Board"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}